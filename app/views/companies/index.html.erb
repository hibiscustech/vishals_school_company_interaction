<h1>Listing companies</h1>

<table>
  <tr>
    <th>Company name</th>
    <th>City</th>
    <th>State</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>Zipcode</th>
    <th>Website</th>
    <th>Phone</th>
    <th>Detail</th>
    <th>Industry</th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%=h company.company_name %></td>
    <td><%=h company.city %></td>
    <td><%=h company.state %></td>
    <td><%=h company.address1 %></td>
    <td><%=h company.address2 %></td>
    <td><%=h company.zipcode %></td>
    <td><%=h company.website %></td>
    <td><%=h company.phone %></td>
    <td><%=h company.detail %></td>
    <td><%=h company.industry_id %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

