<h1>Listing schools</h1>

<table>
  <tr>
    <th>School name</th>
    <th>City</th>
    <th>State</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>Zipcode</th>
    <th>Website</th>
    <th>Phone</th>
    <th>Detail</th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%=h school.school_name %></td>
    <td><%=h school.city %></td>
    <td><%=h school.state %></td>
    <td><%=h school.address1 %></td>
    <td><%=h school.address2 %></td>
    <td><%=h school.zipcode %></td>
    <td><%=h school.website %></td>
    <td><%=h school.phone %></td>
    <td><%=h school.detail %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New school', new_school_path %>